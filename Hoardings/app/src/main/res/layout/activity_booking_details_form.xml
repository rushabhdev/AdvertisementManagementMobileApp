<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_booking_details_form"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:background="#536878"
    tools:context="com.example.vivekprajapati.hoardings_json.BookingForm">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/etBookingId"
        android:textColorHint="#F5F5DC"
        android:hint="Enter Booking Id"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/etHoardingId"
        android:textColorHint="#F5F5DC"
        android:hint="Enter Hoarding Id"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/etBannerUrl"
        android:textColorHint="#F5F5DC"
        android:hint="Enter Banner Url"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/etHoardingPrice"
        android:textColorHint="#F5F5DC"
        android:hint="Enter Hoarding Price"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnbookdetailshoard"
        android:background="@drawable/buttonshape"
        android:textColor="#F5F5DC"
        android:text="Book Details Hoarding"/>
</LinearLayout>
