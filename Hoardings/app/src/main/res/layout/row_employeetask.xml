<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#536878">

    <TextView
        android:id="@+id/tvWorkTitle"
        android:textSize="16sp"
        android:padding="20dp"
        android:textStyle="bold"
        android:text="Work Title"
        android:textColor="#F5F5DC"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tvWorkDescription"
        android:textSize="16sp"
        android:padding="20dp"
        android:textStyle="bold"
        android:textColor="#F5F5DC"
        android:text="Work Description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tvEmployeeId"
        android:textSize="16sp"
        android:padding="20dp"
        android:textStyle="bold"
        android:textColor="#F5F5DC"
        android:text="Employee Id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tvAdminId"
        android:textSize="16sp"
        android:padding="20dp"
        android:textStyle="bold"
        android:textColor="#F5F5DC"
        android:text="Admin Id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tvWorkStatus"
        android:textSize="16sp"
        android:padding="20dp"
        android:textStyle="bold"
        android:textColor="#F5F5DC"
        android:text="Work Status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


</LinearLayout>